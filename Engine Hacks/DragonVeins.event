#incbin "ASM/Dragon Vein/DrawingDragonVein_3.dmp"
ORG (0x8AF880+0x8*Vein_Map_Sprite_Number)
SHORT 0x0002
SHORT 0x0000
POIN VeinGraphics

ORG $2e444 //prevent suspend from breaking the game
SHORT 0
POP

