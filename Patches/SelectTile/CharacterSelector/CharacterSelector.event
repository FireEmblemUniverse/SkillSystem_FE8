	ClassMenuOption(CreatorFemale,CreatorMilitary,	1, CaterpieID, 2, WeedleID, 3, PidgeyID, 4, RattataID, 5, MeowthID)
	ClassMenuOption(CreatorMale,CreatorMage,			1, CaterpieID, 2, WeedleID, 3, PidgeyID, 4, RattataID, 5, MeowthID)
	ClassMenuOption(CreatorFemale,CreatorMage,		1, CaterpieID, 2, WeedleID, 3, PidgeyID, 4, RattataID, 5, MeowthID)
