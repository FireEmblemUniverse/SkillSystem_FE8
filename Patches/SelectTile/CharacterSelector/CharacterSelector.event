	#incbin "MainBoonBaneBox.dmp"
	ALIGN 4
	gCreatorMainNumberHighlightUIBoxTSA:
	#incbin "MainTextHighlightBox.dmp"
	
	ALIGN 4
	gMainMenuErrorTexts:
	SHORT 0x00 0x00 0x00 ClassMenuErrorText BoonMenuErrorText BaneMenuErrorText
	
	ALIGN 4
	gAvatarPortraitLookup: // BYTE (gender) (route) ; SHORT (mugID). Used to get a portrait in the main menu based on chosen gender and route.
	BYTE CreatorMale CreatorMercenary ; SHORT OakMug
	BYTE CreatorFemale CreatorMercenary ; SHORT GaryMug
	BYTE CreatorMale CreatorMilitary ; SHORT OakMug
	BYTE CreatorFemale CreatorMilitary ; SHORT GaryMug
	BYTE CreatorMale CreatorMage ; SHORT OakMug
	BYTE CreatorFemale CreatorMage ; SHORT GaryMug
